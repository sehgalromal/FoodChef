<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="ChipGroupTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize your theme here. -->
            <item name="hintTextAppearance">@style/FloatingLabelHintText</item>
            <item name="errorTextAppearance">@color/colorAccent</item>
            <item name="boxStrokeColor">@color/color_general</item>
            <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="MaterialButton">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:textColorLink">#5F4B4B</item>
    </style>

    <style name="EditTextForm" parent="@android:style/Theme.NoTitleBar.Fullscreen">

    </style>

    <style name="FloatingLabelHintText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_general</item>
    </style>

    <style name="Headline2">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">60.61sp</item>
    </style>

    <style name="Body2">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textSize">14.2sp</item>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textSize">14.14sp</item>
    </style>
    <!-- Follow this style for unfilled buttons -->
    <style name="ButtonTextStyleEmpty">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">#865730</item>
        <item name="android:textSize">14.14sp</item>
    </style>



</resources>
